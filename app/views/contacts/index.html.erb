
<% if user_signed_in? %>
  <h2>Contact List</h2>
  <br/>

  <table class="table table-striped table-bordered table-hover table-responsive-sm">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Instagram</th>
        <th>Twitter</th>
        <th>Facebook</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
      <% if contact.user == current_user %>
          <tr>
            <td>
              <%= link_to contact.first_name + ' ' + contact.last_name, contact %>
            </td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.instagram %></td>
            <td><%= contact.twitter %></td>
            <td><%= contact.facebook %></td>
            <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "New Contact", new_contact_path, class:"btn btn-info" %>
<% else %>
  <%= render file: "/home/index" %>
<% end %>

